<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="24.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="management.perpustakaan.HomeController"
      style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #dbeafe);">
    <padding>
        <Insets top="60.0" right="60.0" bottom="60.0" left="60.0"/>
    </padding>

    <!-- Judul -->
    <Label text="Manajemen Perpustakaan"
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

    <!-- Subjudul -->
    <Text text="Selamat datang! Silakan pilih menu untuk mengelola data perpustakaan."
          style="-fx-font-size: 16px; -fx-fill: #334155; -fx-text-alignment: center;"
          wrappingWidth="420"/>

    <!-- Tombol Menu -->
    <VBox spacing="18" alignment="CENTER">
        <Button text="Kelola Daftar Buku" onAction="#handleManageBooks"
                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10px; -fx-padding: 12 0 12 0; -fx-min-width: 280px;"/>
        <Button text="Kelola Daftar Anggota" onAction="#handleManageMembers"
                style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 10px; -fx-padding: 12 0 12 0; -fx-min-width: 280px;"/>
    </VBox>
</VBox>