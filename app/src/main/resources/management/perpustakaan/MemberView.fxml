<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="management.perpustakaan.MemberController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="DAFTAR ANGGOTA PERPUSTAKAAN">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="20.0" top="20.0" />
         </padding>
      </HBox>
      
      <!-- Form Tambah Member -->
      <VBox spacing="10.0">
         <children>
            <Label text="Tambah Anggota Baru:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Nama:" minWidth="60.0" />
                  <TextField fx:id="nameField" promptText="Masukkan nama anggota" prefWidth="200.0" />
                  <Button fx:id="addMemberButton" onAction="#handleAddMember" text="Tambah Member" />
                  <Button fx:id="refreshButton" onAction="#handleRefreshTable" text="Refresh" />
               </children>
            </HBox>
            <Label fx:id="statusLabel" text=" " />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
      
      <!-- Tabel Member -->
      <TableView fx:id="memberTable" prefHeight="300.0">
         <columns>
            <TableColumn fx:id="memberIdColumn" prefWidth="150.0" text="ID Anggota" />
            <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Nama Anggota" />
         </columns>
      </TableView>
      
      <!-- Button Navigation -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button onAction="#handleBackButton" text="Kembali ke Home" />
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>