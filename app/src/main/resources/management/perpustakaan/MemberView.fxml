<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="management.perpustakaan.MemberController">
   <top>
      <VBox>
         <children>
            <Label text="Library Member Management System">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox spacing="10.0">
         <children>
            <VBox prefWidth="400.0" spacing="10.0">
               <children>
                  <Label text="Member Form">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <GridPane hgap="10.0" vgap="10.0">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" minWidth="80.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="280.0" minWidth="200.0" prefWidth="250.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="Name:" />
      <TextField fx:id="txtName" promptText="Enter member name" GridPane.columnIndex="1" />
      <CheckBox fx:id="chkUseCustomId" text="Custom ID" GridPane.rowIndex="1" />
      <TextField fx:id="txtCustomId" promptText="Enter custom ID (e.g., M001)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
</GridPane>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnAdd" onAction="#handleAddMember" text="Add Member" />
                        <Button fx:id="btnUpdate" onAction="#handleUpdateMember" text="Update" />
                        <Button fx:id="btnDelete" onAction="#handleDeleteMember" text="Delete" />
                        <Button fx:id="btnClear" onAction="#handleClearForm" text="Clear" />
                     </children>
                  </HBox>
                  <Separator />
                  <Label text="Add Activity">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="txtActivity" prefWidth="250.0" promptText="Enter activity description" />
                        <Button fx:id="btnAddActivity" onAction="#handleAddActivity" text="Add" />
                     </children>
                  </HBox>
                  <Separator />
                  <Label text="Member Details">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="txtDetails" editable="false" prefHeight="200.0" />
               </children>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <HBox>
                     <children>
                        <Label text="Members List">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblTotalMembers" text="Total Members: 0" />
                     </children>
                  </HBox>
                  <TableView fx:id="tblMembers" onMouseClicked="#handleMemberDoubleClick" prefHeight="300.0">
                     <columns>
                        <TableColumn fx:id="colMemberId" prefWidth="100.0" text="Member ID" />
                        <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="colActivities" prefWidth="80.0" text="Activities" />
                        <TableColumn fx:id="colValid" prefWidth="70.0" text="Valid" />
                     </columns>
                  </TableView>
                  <Label fx:id="lblSelectedMember" text="No member selected" />
                  <Label text="Activities History">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <ListView fx:id="listActivities" prefHeight="150.0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" bottom="10.0" right="10.0" left="10.0" />
            </padding>
            <children>
                <Button text="Kembali ke Menu Utama" onAction="#handleBackButton" />
            </children>
        </HBox>
    </bottom>

</BorderPane>