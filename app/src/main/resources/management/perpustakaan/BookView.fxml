<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="management.perpustakaan.BookController" style="-fx-background-color: linear-gradient(to bottom, #fef7ff, #f8f0ff);">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <Label text="📚 Daftar Buku Perpustakaan" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6a4c93;" />

    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #faf8ff; -fx-background-radius: 10; -fx-border-color: #e1bee7; -fx-border-width: 1; -fx-border-radius: 10;">
        <columns>
            <TableColumn fx:id="idColumn" text="🆔 ID" prefWidth="80" />
            <TableColumn fx:id="titleColumn" text="📖 Judul" prefWidth="280" />
            <TableColumn fx:id="authorColumn" text="✍️ Penulis" prefWidth="220" />
            <TableColumn fx:id="statusColumn" text="📊 Status" prefWidth="150" />
        </columns>
        <placeholder>
            <VBox alignment="CENTER" spacing="8.0" style="-fx-padding: 30;">
                <Label text="📚" style="-fx-font-size: 36px;" />
                <Label text="Belum ada buku tersedia" style="-fx-font-size: 14px; -fx-text-fill: #9575cd; -fx-font-weight: bold;" />
                <Label text="Tambahkan buku baru untuk memulai!" style="-fx-font-size: 11px; -fx-text-fill: #b39ddb;" />
            </VBox>
        </placeholder>
    </TableView>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="addButton" text="➕ Tambah Buku Baru" onAction="#handleAddButton"
                style="-fx-background-color: linear-gradient(to bottom, #81c784, #66bb6a); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0, 0, 1);" />
        <Button fx:id="editButton" text="✏️ Edit Buku Terpilih" onAction="#handleEditButton"
                style="-fx-background-color: linear-gradient(to bottom, #64b5f6, #42a5f5); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0, 0, 1);" />
        <Button fx:id="deleteButton" text="🗑️ Hapus Buku Terpilih" onAction="#handleDeleteButton"
                style="-fx-background-color: linear-gradient(to bottom, #e57373, #ef5350); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0, 0, 1);" />
    </HBox>

    <VBox fx:id="formVBox" alignment="TOP_LEFT" spacing="10.0"
          maxWidth="600"
          style="-fx-background-color: rgba(255,255,255,0.8); -fx-border-color: #f8bbd9; -fx-border-width: 2; -fx-padding: 15; -fx-border-radius: 10; -fx-background-radius: 10;">
        
        <Label text="📝 Form Input Buku"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ad1457;" />
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="400.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="40.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="📖 Judul Buku:" GridPane.rowIndex="0"
                       style="-fx-font-weight: bold; -fx-text-fill: #6a1b9a;" />
                <TextField fx:id="titleField" promptText="Masukkan judul buku"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"
                           style="-fx-background-color: #f3e5f5; -fx-background-radius: 8; -fx-border-color: #e1bee7; -fx-border-radius: 8; -fx-padding: 6;" />

                <Label text="✍️ Nama Penulis:" GridPane.rowIndex="1"
                       style="-fx-font-weight: bold; -fx-text-fill: #6a1b9a;" />
                <TextField fx:id="authorField" promptText="Masukkan nama penulis"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-background-color: #f3e5f5; -fx-background-radius: 8; -fx-border-color: #e1bee7; -fx-border-radius: 8; -fx-padding: 6;" />

                <Button fx:id="saveButton" onAction="#handleSaveButton" text="💾 Simpan"
                        GridPane.columnIndex="1" GridPane.rowIndex="2"
                        style="-fx-background-color: linear-gradient(to bottom, #ab47bc, #9c27b0); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 8 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 1);" />

            </children>
        </GridPane>
    </VBox>


    <Button text="🏠 Kembali ke Menu Utama" onAction="#handleBackButton"
            style="-fx-background-color: linear-gradient(to bottom, #ffb74d, #ff9800); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0, 0, 1);" />
</VBox>

